<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Models="clr-namespace:BackOffice.Models">

    <ItemsPanelTemplate x:Key="ModuleListPanelTemplate">
        <WrapPanel Orientation="Horizontal" IsItemsHost="True"/>
    </ItemsPanelTemplate>

    <Style TargetType="{x:Type Button}" x:Key="_buttonStyle">
        <Setter Property="Margin" Value="10" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <StackPanel Margin="3" Orientation="Vertical">
                        <Image 
                                   Width="48"
                                   Height="48"
                                   Margin="2"
                                   Source="{TemplateBinding Tag}" />
                        <TextBlock 
                                   Text="{TemplateBinding Content}" />
                    </StackPanel>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <DataTemplate DataType="{x:Type Models:OfficeModule}">
        <Button Style="{StaticResource _buttonStyle}" Content="{Binding Title}" ToolTip="{Binding Tooltip}" Tag="{Binding IconFileName}" Command="{Binding Command}" />
    </DataTemplate>

</ResourceDictionary>